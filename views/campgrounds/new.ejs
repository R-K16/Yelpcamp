<%- include("../partials/header") %>
<div class="container"> 
    <div class="row">
         <h1 style="text-align:center">New Campground Page</h1>
         <div style="width:30%; margin:25px auto;">
            <form action="/campground" method="POST">
                 <div class="form-group">
                 <input class="form-control" type="text" placeholder="name" name='name'>
                 </div>
                 <div class="form-group">
                 <input class="form-control" type="number" placeholder="price" name='price' min="0.01" step="0.01">
                 </div>
                 <div class="form-group">
                 <input class="form-control" type="text" placeholder="imageurl" name='image'>
                 </div>
                 <div class="form-group">
                 <input class="form-control" type="text" placeholder="discription" name='discription'>
                 </div>
                 <div class="form-group">
                 <button class="btn btn-lg btn-default btn-block">Submit</button>
                 </div>
             </form>
             <a  href="/campground">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>