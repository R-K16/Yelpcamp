<%- include("../partials/header") %>
<div class="container">
    <header class="jumotron">
        <div class="container">
            <h1>Welcome to YELPCAMP</h1>
            <p>View our hand-picked campground from the whole world</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campground/new">Add New Campground</a>
            </p>
        </div>
    </header>
    <div class="row text-align: center" style="display:flex; flex-wrap: wrap;">  
        <%campgrounds.forEach(function(c){%>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%=c.image%>">
            </div>
            <div class="caption">
                <h4><%=c.name%></h4>  
            </div>
            <p>
                <a href="/campground/<%=c._id%>" class="btn btn-primary">More Info</a>
            </p>
        </div>
        <%});%>
    </div>
</div>
<%- include("../partials/footer") %>